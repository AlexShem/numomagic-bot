# Test Bot
BOT_TOKEN=Telegram_Bot_Token
# Production Bot
# BOT_TOKEN=Telegram_Bot_Token

# Logging Path
LOG_PATH=path/to/logs/action.csv

# private channel id (negative int with -100 prefix)
PRO_CHANNEL_ID=-100<ChannelId>

# premium channel link for subscription checks
PREMIUM_CHANNEL_LINK=https://t.me/...

# Webhook Configuration (for deployment)
# Set USE_WEBHOOK=true for Railway deployment, false for local development
USE_WEBHOOK=false
# Your Railway public domain (only needed when USE_WEBHOOK=true)
WEBHOOK_URL=https://your-app.up.railway.app
# Secret token for webhook security (generate with: openssl rand -hex 32)
WEBHOOK_SECRET=your_random_secret_here


